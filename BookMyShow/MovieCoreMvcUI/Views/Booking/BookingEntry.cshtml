@model BookMyShowEntity.Booking

<div>
    <a asp asp-controller="Booking" asp-action="Index">Bookings Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Bookings Entry</h2><hr />
    <div class="form-group">
        <label>Quantity</label>
        <input type="text" asp-for="Quantity" class="form-control"
               placeholder="Enter booking amount" required />
    </div>
    <div class="form-group">
        <label>UserId</label>
        <input type="text" asp-for="UserId" class="form-control"
               placeholder="Enter ShowTime Id" required />
    </div>
    <div class="form-group">
        <label>ShowTiming Id</label>
        <input type="text" asp-for="ShowTimingId" class="form-control"
               placeholder="enter movie description" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


