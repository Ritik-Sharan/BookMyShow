@model IEnumerable<BookMyShowEntity.Users>

<div>
    <a asp asp-controller="User" asp-action="UserEntry">User Entry</a>
    <hr />
</div>

<div class="row">
    <div class="col-12">
        <h3>Users</h3>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>Password</th>
                    <th>E-mail</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.User_Name</td>
                        <td>@user.Password</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="User" asp-action="EditUser"
                           asp-route-UserId="@user.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="User" asp-action="DeleteUser"
                           asp-route-UserId="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

