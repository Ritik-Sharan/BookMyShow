@model BookMyShowEntity.Users

<div>
    <a asp asp-controller="User" asp-action="Index">User Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>User Entry</h2><hr />
    <div class="form-group">
        <label>User Name</label>
        <input type="text" asp-for="User_Name" class="form-control"
               placeholder="Enter User name" required />
    </div>
    <div class="form-group">
        <label>Password Type</label>
        <input type="text" asp-for="Password" class="form-control"
               placeholder="Enter password" required />
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="text" asp-for="Email" class="form-control"
               placeholder="Enter e-mail" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


