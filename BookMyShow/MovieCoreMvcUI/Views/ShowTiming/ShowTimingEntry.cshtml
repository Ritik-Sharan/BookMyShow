@model BookMyShowEntity.ShowTiming

<div>
    <a asp asp-controller="ShowTiming" asp-action="Index">ShowTime Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>ShowTiming Entry</h2><hr />
    <div class="form-group">
        <label>MovieId</label>
        <input type="text" asp-for="MovieId" class="form-control"
               placeholder="Enter MovieId" required />
    </div>
    <div class="form-group">
        <label>TheatreId</label>
        <input type="text" asp-for="TheatreId" class="form-control"
               placeholder="Enter TheatreId" required />
    </div>
    <div class="form-group">
        <label>Show Time</label>
        <input type="datetime-local" asp-for="ShowTime" class="form-control"
               placeholder="Enter ShowTime" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


